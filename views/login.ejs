	<script type="text/javascript" src="/assets/js/login.js"></script>
	<link rel="stylesheet" type="text/css" href="/assets/css/menu.css">
	<link rel="stylesheet" type="text/css" href="/assets/css/login.css">
</head>
<body>
	
	<% include menu.ejs %>
	
	<div id="login">
		<h1>Login</h1>
		<p id='error'></p>
		<form id='loginForm' method="POST">
			<input id='user' class="field" type="text" name="user" placeholder='User' required><br>
			<input id='pass' class="field" type="password" name="pass" placeholder='Password' required><br>
			<button class="formButton" type="submit">Login</button>
			<h4>Don't have account? <a id='register' href='/register'>Sign Up Now!</a></h4>
		</form>
	<div>
</body>
